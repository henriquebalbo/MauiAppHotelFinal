   
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="Hospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">


    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                             Padding="10"
                             Spacing="10">


        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="PaleVioletRed"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Padding="10" Margin="10">
            <StackLayout  Orientation="Horizontal" >
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: " />
                    <Label Text="{Binding QntAdultos}"
                           TextColor="OrangeRed" 
                           Margin="5,0,0,0"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="CrianÃ§as: " />
                    <Label Text="{Binding QntCriancas}" 
                           TextColor="OrangeRed"
                           Margin="5,0,0,0"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <Frame Margin="10" Padding="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                <Label Grid.Row="1" Grid.Column="0"
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="OrangeRed"/>
                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="OrangeRed"/>
                <Label Grid.Row="1" Grid.Column="2"
                       Text="{Binding Estadia}"
                       TextColor="OrangeRed"
                       Margin="5,0,0,0"/>
            </Grid>
        </Frame>

        <Frame Margin="10" Padding="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="Valor Total: " />
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" 
                       TextColor="OrangeRed"
                       Margin="5,0,0,0"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar" Clicked="Button_Clicked"
                    BackgroundColor="PaleVioletRed"
                    TextColor="White"
                    CornerRadius="20"
                    FontSize="14"
                    FontAttributes="Bold"
                    HeightRequest="30"
                    HorizontalOptions="CenterAndExpand"
              />

    </VerticalStackLayout>
</ContentPage>
